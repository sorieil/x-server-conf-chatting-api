{
    "compilerOptions": {
        "emitDecoratorMetadata": true, //Typeorm option
        "experimentalDecorators": true, //Typeorm option
        "allowJs": true,
        "module": "commonjs",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "typeRoots": ["node_modules/@types"],
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        }
    },
    "include": ["src/**/*"]
}
